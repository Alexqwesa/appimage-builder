version: 1

AppDir:
  path: ./AppDir

  app_info:
    id: !Var app_info_id
    name: !Var app_info_name
    icon: !Var app_info_icon
    version: !Var app_info_version
    exec: !Var app_info_exec
    exec_args: !Var app_info_exec_args

  runtime:
    env:
      !Var runtime_env

  apt:
    arch: !Var apt_arch
    sources:
      !Var apt_sources
    include:
      !Var apt_includes
    exclude:
      !Var apt_excludes

  files:
    exclude:
      !Var files_excludes

  test:
    debian:
      image: appimage-builder/test-env:debian-stable
      command: "./AppRun"
      use_host_x: True
    centos:
      image: appimage-builder/test-env:centos-7
      command: "./AppRun"
      use_host_x: True
    arch:
      image: appimage-builder/test-env:archlinux-latest
      command: "./AppRun"
      use_host_x: True
    fedora:
      image: appimage-builder/test-env:fedora-30
      command: "./AppRun"
      use_host_x: True
    ubuntu:
      image: appimage-builder/test-env:ubuntu-xenial
      command: "./AppRun"
      use_host_x: True
AppImage:
  arch: !Var appimage_arch
  update-information: None
  sign-key: None
